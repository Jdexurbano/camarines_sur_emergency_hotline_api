{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true, // ✅ allows `import express from "express"`
    "resolveJsonModule": true, // ✅ allows importing JSON files
    "types": ["node"], // ✅ node typings

    // Output options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended clean setup
    "skipLibCheck": true
  }
}
